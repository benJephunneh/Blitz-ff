generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id                Int               @id @default(autoincrement())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  firstname         String?
  lastname          String?
  companyname       String?
  displayname       String
  notes             String?
  userId            Int
  phone             String
  email             String
  user              User              @relation(fields: [userId], references: [id])
  jobs              Job[]
  JobArchive        JobArchive[]
  jobStashes        JobStash[]
  locations         Location[]
  archivedLocations LocationArchive[]
  locationStashes   LocationStash[]
}

model CustomerStash {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  firstname   String?
  lastname    String?
  companyname String?
  displayname String?
  notes       String
  userId      Int
  stashType   StashType @default(Customer)
  phone       String
  email       String
  user        User      @relation(fields: [userId], references: [id])
}

model Location {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  primary      Boolean      @default(true)
  house        String?
  street       String
  city         String
  state        String       @default("FL")
  zipcode      String
  phones       String
  block        String?
  lot          String?
  parcel       String?
  locationType LocationType @default(Personal)
  customerId   Int
  notes        String?
  userId       Int
  jobs         Job[]
  JobArchive   JobArchive[]
  jobStashes   JobStash[]
  customer     Customer     @relation(fields: [customerId], references: [id])
  user         User         @relation(fields: [userId], references: [id])
}

model LocationStash {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  primary      Boolean      @default(true)
  house        String?
  street       String?
  city         String?
  state        String?      @default("FL")
  zipcode      String?
  phones       String?
  block        String?
  lot          String?
  parcel       String?
  locationType LocationType @default(Personal)
  customerId   Int
  stashType    StashType    @default(Location)
  userId       Int
  notes        String
  customer     Customer     @relation(fields: [customerId], references: [id])
  user         User         @relation(fields: [userId], references: [id])
}

model Job {
  id                Int               @id @default(autoincrement())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  title             String
  start             DateTime?
  end               DateTime?
  locationId        Int
  notes             String?
  userId            Int
  completed         Boolean           @default(false)
  customerId        Int
  estimates         Estimate[]
  archivedEstimates EstimateArchive[]
  estimateStashes   EstimateStash[]
  invoices          Invoice[]
  archivedInvoices  InvoiceArchive[]
  invoiceStashes    InvoiceStash[]
  customer          Customer          @relation(fields: [customerId], references: [id])
  location          Location          @relation(fields: [locationId], references: [id])
  user              User              @relation(fields: [userId], references: [id])
  lineitems         LineItem[]        @relation("JobToLineItem")
}

model JobStash {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  title      String?
  start      DateTime?
  end        DateTime?
  locationId Int
  stashType  StashType  @default(Job)
  userId     Int
  notes      String
  customerId Int
  customer   Customer   @relation(fields: [customerId], references: [id])
  location   Location   @relation(fields: [locationId], references: [id])
  user       User       @relation(fields: [userId], references: [id])
  lineitems  LineItem[] @relation("JobStashToLineItem")
}

model Invoice {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  title        String
  jobId        Int
  userId       Int
  notes        String?
  paid         Boolean     @default(false)
  sent         Boolean     @default(false)
  jobArchiveId Int?
  JobArchive   JobArchive? @relation(fields: [jobArchiveId], references: [id])
  job          Job         @relation(fields: [jobId], references: [id])
  user         User        @relation(fields: [userId], references: [id])
  lineItems    LineItem[]  @relation("InvoiceToLineItem")
}

model InvoiceStash {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  jobId     Int
  userId    Int
  notes     String
  stashType StashType  @default(Invoice)
  job       Job        @relation(fields: [jobId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  lineItems LineItem[] @relation("InvoiceStashToLineItem")
}

model Estimate {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  jobId     Int
  total     Int        @default(0)
  userId    Int
  job       Job        @relation(fields: [jobId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  lineItems LineItem[] @relation("EstimateToLineItem")
}

model EstimateStash {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  jobId     Int
  total     Int        @default(0)
  userId    Int
  stashType StashType  @default(Estimate)
  job       Job        @relation(fields: [jobId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  lineItems LineItem[] @relation("EstimateStashToLineItem")
}

model EstimateTemplate {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  total     Int
  lineItems LineItem[] @relation("EstimateTemplateToLineItem")
}

model LineItem {
  id                Int                @id @default(autoincrement())
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  name              String
  cost              Int?
  quantity          Int                @default(1)
  notes             String?
  EstimateArchive   EstimateArchive[]  @relation("EstimateArchiveToLineItem")
  EstimateStash     EstimateStash[]    @relation("EstimateStashToLineItem")
  EstimateTemplate  EstimateTemplate[] @relation("EstimateTemplateToLineItem")
  Estimate          Estimate[]         @relation("EstimateToLineItem")
  archivedInvoices  InvoiceArchive[]   @relation("InvoiceArchiveToLineItem")
  invoiceStashes    InvoiceStash[]     @relation("InvoiceStashToLineItem")
  invoices          Invoice[]          @relation("InvoiceToLineItem")
  archivedJobs      JobArchive[]       @relation("JobArchiveToLineItem")
  jobStashes        JobStash[]         @relation("JobStashToLineItem")
  jobs              Job[]              @relation("JobToLineItem")
  lineItemTemplates LineItemTemplate[] @relation("LineItemToLineItemTemplate")
}

model LineItemTemplate {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  cost      Int
  notes     String
  lineItems LineItem[] @relation("LineItemToLineItemTemplate")
}

model CustomerArchive {
  id                Int               @id @default(autoincrement())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  firstname         String?
  lastname          String?
  companyname       String?
  displayname       String
  email             String
  notes             String?
  phone             String
  archivedJobs      JobArchive[]
  archivedLocations LocationArchive[]
}

model LocationArchive {
  id                Int              @id @default(autoincrement())
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  primary           Boolean          @default(true)
  house             String?
  street            String
  city              String
  state             String           @default("FL")
  zipcode           String
  phones            String
  block             String?
  lot               String?
  parcel            String?
  customerId        Int?
  locationType      LocationType     @default(Personal)
  notes             String?
  customerArchiveId Int?
  archivedJobs      JobArchive[]
  archivedCustomer  CustomerArchive? @relation(fields: [customerArchiveId], references: [id])
  customer          Customer?        @relation(fields: [customerId], references: [id])
}

model JobArchive {
  id                Int               @id @default(autoincrement())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  title             String
  start             DateTime?
  end               DateTime?
  locationId        Int?
  notes             String?
  customerId        Int?
  completed         Boolean           @default(false)
  customerArchiveId Int?
  locationArchiveId Int?
  archivedEstimates EstimateArchive[]
  Invoices          Invoice[]
  archivedInvoices  InvoiceArchive[]
  archivedCustomer  CustomerArchive?  @relation(fields: [customerArchiveId], references: [id])
  customer          Customer?         @relation(fields: [customerId], references: [id])
  archivedLocation  LocationArchive?  @relation(fields: [locationArchiveId], references: [id])
  location          Location?         @relation(fields: [locationId], references: [id])
  lineitems         LineItem[]        @relation("JobArchiveToLineItem")
}

model InvoiceArchive {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  title        String
  jobId        Int?
  jobArchiveId Int?
  notes        String?
  paid         Boolean
  jobArchive   JobArchive? @relation(fields: [jobArchiveId], references: [id])
  job          Job?        @relation(fields: [jobId], references: [id])
  lineItems    LineItem[]  @relation("InvoiceArchiveToLineItem")
}

model EstimateArchive {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  title        String
  total        Int         @default(0)
  jobId        Int?
  jobArchiveId Int?
  jobArchive   JobArchive? @relation(fields: [jobArchiveId], references: [id])
  job          Job?        @relation(fields: [jobId], references: [id])
  lineItems    LineItem[]  @relation("EstimateArchiveToLineItem")
}

model User {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  username        String          @unique
  email           String          @unique
  hashedPassword  String?
  role            UserRole        @default(Tech)
  customers       Customer[]
  customerStashes CustomerStash[]
  Estimate        Estimate[]
  EstimateStash   EstimateStash[]
  invoices        Invoice[]
  invoiceStashes  InvoiceStash[]
  jobs            Job[]
  jobStashes      JobStash[]
  locations       Location[]
  locationStashes LocationStash[]
  sessions        Session[]
  tokens          Token[]
}

model Session {
  id                 Int       @id @default(autoincrement())
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  expiresAt          DateTime?
  handle             String    @unique
  hashedSessionToken String?
  antiCSRFToken      String?
  publicData         String?
  privateData        String?
  userId             Int?
  user               User?     @relation(fields: [userId], references: [id])
}

model Token {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  hashedToken String
  type        TokenType
  expiresAt   DateTime
  sentTo      String
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  @@unique([hashedToken, type])
}

enum CustomerType {
  Owner
  Manager
  Realtor
  Builder
}

enum EmailType {
  Personal
  Business
}

enum PhoneType {
  Primary
  Secondary
  Office
}

enum Permit {
  None
  PendingNotPaid
  PendingPaid
  Received
  Active
  Expired
}

enum StashType {
  Customer
  Location
  Job
  Invoice
  Estimate
}

enum LocationType {
  Personal
  Business
  Managed
}

enum UserRole {
  Owner
  Admin
  Tech
}

enum TokenType {
  RESET_PASSWORD
}
