generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url      = env("postgresql://postgres:pgsql@localhost:5432/dev-ff")
}

model Customer {
  id                Int               @id @default(autoincrement())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  firstname         String?
  lastname          String?
  companyname       String?
  displayname       String
  email             String
  phone             String
  notes             String?
  tasks Task[]
  locations         Location[]
  locationStashes   LocationStash[]
  archivedLocations LocationArchive[]
  jobs              Job[]
  jobStashes        JobStash[]
  user              User              @relation(fields: [userId], references: [id])
  userId            Int
  JobArchive        JobArchive[]
}

model CustomerStash {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  firstname   String?
  lastname    String?
  companyname String?
  displayname String?
  email       String
  phone       String
  notes       String
  stashType   StashType @default(Customer)
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

model Location {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  primary      Boolean      @default(true)
  house        String?
  street       String
  city         String
  state        String       @default("FL")
  zipcode      String
  phones       String
  block        String?
  lot          String?
  parcel       String?
  notes        String?
  tasks Task[]
  locationType LocationType @default(Personal)
  customer     Customer     @relation(fields: [customerId], references: [id])
  jobs         Job[]
  jobStashes   JobStash[]
  user         User         @relation(fields: [userId], references: [id])
  customerId   Int
  userId       Int
  JobArchive   JobArchive[]
}

model LocationStash {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  primary      Boolean      @default(true)
  house        String?
  street       String?
  city         String?
  state        String?      @default("FL")
  zipcode      String?
  phones       String?
  block        String?
  lot          String?
  parcel       String?
  notes        String
  locationType LocationType @default(Personal)
  stashType    StashType    @default(Location)
  customer     Customer     @relation(fields: [customerId], references: [id])
  user         User         @relation(fields: [userId], references: [id])
  customerId   Int
  userId       Int
}

model Job {
  id                Int               @id @default(autoincrement())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  title             String
  start             DateTime?
  end               DateTime?
  completed         Boolean           @default(false)
  locateRequired    Boolean           @default(false)
  notes             String?
  lineitems         LineItem[]
  tasks Task[]
  customer          Customer          @relation(fields: [customerId], references: [id])
  location          Location          @relation(fields: [locationId], references: [id])
  invoices          Invoice[]
  locate            Locate?
  invoiceStashes    InvoiceStash[]
  archivedInvoices  InvoiceArchive[]
  estimates         Estimate[]
  estimateStashes   EstimateStash[]
  archivedEstimates EstimateArchive[]
  user              User              @relation(fields: [userId], references: [id])
  customerId        Int
  locationId        Int
  userId            Int
  // Show warranty on customer page, calculated from date of completion.
}

model JobStash {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  title      String?
  start      DateTime?
  end        DateTime?
  notes      String
  lineitems  LineItem[]
  stashType  StashType  @default(Job)
  customer   Customer   @relation(fields: [customerId], references: [id])
  location   Location   @relation(fields: [locationId], references: [id])
  user       User       @relation(fields: [userId], references: [id])
  customerId Int
  locationId Int
  userId     Int
}

model Task {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  notes String
  customer Customer? @relation(fields: [customerId], references: [id])
  location Location? @relation(fields: [locationId], references: [id])
  job Job? @relation(fields: [jobId], references: [id])
  customerId Int?
  locationId Int?
  jobId Int?
}

model Invoice {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  title        String
  paid         Boolean     @default(false)
  sent         Boolean     @default(false)
  notes        String?
  lineItems    LineItem[]
  job          Job         @relation(fields: [jobId], references: [id])
  user         User        @relation(fields: [userId], references: [id])
  jobId        Int
  userId       Int
  JobArchive   JobArchive? @relation(fields: [jobArchiveId], references: [id])
  jobArchiveId Int?
}

model InvoiceStash {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  notes     String
  lineItems LineItem[]
  stashType StashType  @default(Invoice)
  job       Job        @relation(fields: [jobId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  jobId     Int
  userId    Int
}

model Estimate {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  total     Int        @default(0)
  lineItems LineItem[]
  job       Job        @relation(fields: [jobId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  jobId     Int
  userId    Int
}

model EstimateStash {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  total     Int        @default(0)
  lineItems LineItem[]
  stashType StashType  @default(Estimate)
  job       Job        @relation(fields: [jobId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  jobId     Int
  userId    Int
}

model EstimateTemplate {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  title     String
  lineItems LineItem[]
  total     Int
}

model LineItem {
  id                Int                @id @default(autoincrement())
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  name              String
  cost              Int?
  quantity          Int                @default(1)
  notes             String?
  jobs              Job[]
  jobStashes        JobStash[]
  archivedJobs      JobArchive[]
  invoices          Invoice[]
  invoiceStashes    InvoiceStash[]
  archivedInvoices  InvoiceArchive[]
  Estimate          Estimate[]
  EstimateStash     EstimateStash[]
  EstimateTemplate  EstimateTemplate[]
  EstimateArchive   EstimateArchive[]
  lineItemTemplates LineItemTemplate[]
}

model LineItemTemplate {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  cost      Int
  notes     String
  lineItems LineItem[]
}

model Locate {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  submitted DateTime @default(now())
  number    Int
  location  String
  job       Job?      @relation(fields: [jobId], references: [id])
  archivedJob JobArchive? @relation(fields: [jobarchiveId], references: [id])
  jobId     Int? @unique
  jobarchiveId     Int? @unique
}

model CustomerArchive {
  id                Int               @id @default(autoincrement())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  firstname         String?
  lastname          String?
  companyname       String?
  displayname       String
  email             String
  phone             String
  notes             String?
  archivedLocations LocationArchive[]
  archivedJobs      JobArchive[]
}

model LocationArchive {
  id                Int              @id @default(autoincrement())
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  primary           Boolean          @default(true)
  house             String?
  street            String
  city              String
  state             String           @default("FL")
  zipcode           String
  phones            String
  block             String?
  lot               String?
  parcel            String?
  notes             String?
  locationType      LocationType     @default(Personal)
  customer          Customer?        @relation(fields: [customerId], references: [id])
  archivedCustomer  CustomerArchive? @relation(fields: [customerArchiveId], references: [id])
  archivedJobs      JobArchive[]
  customerId        Int?
  customerArchiveId Int?
}

model JobArchive {
  id                Int               @id @default(autoincrement())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  title             String
  start             DateTime?
  end               DateTime?
  completed         Boolean           @default(false)
  notes             String?
  lineitems         LineItem[]
  locate Locate?
  customer          Customer?         @relation(fields: [customerId], references: [id])
  archivedCustomer  CustomerArchive?  @relation(fields: [customerArchiveId], references: [id])
  location          Location?         @relation(fields: [locationId], references: [id])
  archivedLocation  LocationArchive?  @relation(fields: [locationArchiveId], references: [id])
  Invoices          Invoice[]
  archivedInvoices  InvoiceArchive[]
  archivedEstimates EstimateArchive[]
  customerId        Int?
  customerArchiveId Int?
  locationId        Int?
  locationArchiveId Int?
  locateId Int?
}

model InvoiceArchive {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  title        String
  paid         Boolean
  notes        String?
  lineItems    LineItem[]
  job          Job?        @relation(fields: [jobId], references: [id])
  jobArchive   JobArchive? @relation(fields: [jobArchiveId], references: [id])
  jobId        Int?
  jobArchiveId Int?
}

model EstimateArchive {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  title        String
  total        Int         @default(0)
  lineItems    LineItem[]
  job          Job?        @relation(fields: [jobId], references: [id])
  jobArchive   JobArchive? @relation(fields: [jobArchiveId], references: [id])
  jobId        Int?
  jobArchiveId Int?
}

model User {
  id             Int       @id @default(autoincrement())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  username       String    @unique
  email          String    @unique
  hashedPassword String?
  role           UserRole  @default(Tech)
  sessions       Session[]
  tokens         Token[]

  customers       Customer[]
  locations       Location[]
  jobs            Job[]
  invoices        Invoice[]
  customerStashes CustomerStash[]
  locationStashes LocationStash[]
  jobStashes      JobStash[]
  invoiceStashes  InvoiceStash[]
  Estimate        Estimate[]
  EstimateStash   EstimateStash[]
}

model Session {
  id                 Int       @id @default(autoincrement())
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  expiresAt          DateTime?
  handle             String    @unique
  hashedSessionToken String?
  antiCSRFToken      String?
  publicData         String?
  privateData        String?
  user               User?     @relation(fields: [userId], references: [id])
  userId             Int?
}

model Token {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  hashedToken String
  expiresAt   DateTime
  sentTo      String
  type        TokenType
  user        User      @relation(fields: [userId], references: [id])
  userId      Int

  @@unique([hashedToken, type])
}

enum CustomerType {
  Owner
  Manager
  Realtor
  Builder
}

enum EmailType {
  Personal
  Business
}

enum PhoneType {
  Primary
  Secondary
  Office
}

enum Permit {
  None
  PendingNotPaid
  PendingPaid
  Received
  Active
  Expired
}

enum StashType {
  Customer
  Location
  Job
  Invoice
  Estimate
}

enum LocationType {
  Personal
  Business
  Managed
}

enum UserRole {
  Owner
  Admin
  Tech
}

enum TokenType {
  RESET_PASSWORD
}
